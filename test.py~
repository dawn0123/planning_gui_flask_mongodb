from flask import Flask, render_template,request,redirect # For flask implementation
from pymongo import MongoClient # Database connector
from bson.objectid import ObjectId # For ObjectId to work

client = MongoClient('localhost', 27017)    #Configure the connection to the database
db = client.camp2016    #Select the database
todos = db.todo #Select the collection

app = Flask(__name__)
title = "TODO with Flask"
heading = "ToDo Reminder"

@app.route("/")
@app.route("/list")
def tasks ():
	todos_l = todos.find()
	return render_template('index.html',todos=todos_l,t=title,h=heading)

@app.route("/add")
def add():
	return render_template('add.html',h=heading,t=title)

@app.route("/action")
def action ():
	#Adding a Task

	name=request.values.get("name")
	desc=request.values.get("desc")
	date=request.values.get("date")
	pr=request.values.get("pr")
	todos.insert({ "name":name, "desc":desc, "date":date, "pr":pr })
	return redirect("/")

@app.route("/remove")
def remove ():
	return render_template('remove.html',h=heading,t=title)

@app.route("/action2")
def action2 ():
	#Deleting a Task with various references

	refer=request.values.get("refer")
	key=request.values.get("data")
	if(refer=="_id"):
		todos.remove({refer:ObjectId(key)})
	else:
		todos.remove({refer:key})

	return redirect("/")

@app.route("/update")
def update ():
	return render_template('update.html',h=heading,t=title)

@app.route("/action3")
def action3 ():
	#Updating a Task with various references

	refer1=request.values.get("refer1")
	data1=request.values.get("data1")
	refer2=request.values.get("refer2")
	data2=request.values.get("data2")

	if(refer1=="_id"):
		todos.update({refer1:ObjectId(data1)}, {'$set':{refer2:data2}})
	else:
		todos.update({refer1:data1}, {'$set':{refer2:data2}})

	return redirect("/")

@app.route("/search")
def search():
	#Searching a Task with various references

	key=request.values.get("key")
	refer=request.values.get("refer")
	if(key=="_id"):
		todos_l = todos.find({refer:ObjectId(key)})
	else:
		todos_l = todos.find({refer:key})
	return render_template('searchlist.html',todos=todos_l,t=title,h=heading)

if __name__ == "__main__":
    app.run(debug=True)
